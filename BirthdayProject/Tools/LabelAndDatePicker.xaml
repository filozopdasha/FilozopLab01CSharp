<UserControl x:Class="FilozopLab01.BirthdayProject.Tools.LabelAndDatePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilozopLab01.BirthdayProject.Tools"
        mc:Ignorable="d">
    <Grid>
        <Label x:Name = "birthdayCaption" Content = "Birthday App" Grid.Row = "0" Grid.Column = "1" HorizontalAlignment = "Center" Margin = "20" Foreground = "Gray" FontSize = "20" />
        <DatePicker x:Name = "dateField" Grid.Row = "1" Grid.Column = "1" ></DatePicker >
    </Grid>
</UserControl>
